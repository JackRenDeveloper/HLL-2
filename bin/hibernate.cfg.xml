<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC     
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"     
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">     
<hibernate-configuration>     
    <session-factory>     
        <!-- 连接库的驱动器 -->     
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>     
        <!-- 连接库的URL -->     
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernate?useUnicode=true&amp;characterEncoding=utf8</property>     
        <!-- 用户名密码 -->     
        <property name="connection.username">root</property>     
        <property name="connection.password">admin</property>     
   
        <property name="hbm2ddl.auto">update</property>     
        <!-- 方言 -->     
        <property name="dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>     
        <!-- 是否显示sql语句 -->     
        <property name="show_sql">false</property>     
        <!-- 实体类的映射声明 -->     
        <mapping resource="com/jacken/entity/User.hbm.xml" />    
        <mapping resource="com/jacken/entity/Customer.hbm.xml" />     
        <mapping resource="com/jacken/entity/Order.hbm.xml" />     
    </session-factory>     
</hibernate-configuration>  
